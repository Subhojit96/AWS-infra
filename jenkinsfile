pipeline{
    agent {
        label 'master'
    }
    tools {
        terraform 'terraform'
    }
    environment{
        access_key= credentials ('AWS_ACCESS_KEY_ID')
        secret_key= credentials ('AWS_SECRET_KEY_ID')
    }
    stages{
        stage ('initilize'){
            steps{
                sh "echo \$PWD"
                sh "terraform init"
            }
        }
        stage('validate'){
            steps{
                sh "terraform validate"
            }
        }
        stage ('plan'){
            steps{
                sh 'terraform plan -var 'access_key=$access_key' -var 'secret_key=$secret_key' -out terraform.tf plan '

                stash name :"terraform-plan", includes: "terraform.tfplan"
            }
        }
        stage ('deploy')
        {
            steps{
                unstash "terraform-plan"
                sh 'terraform apply terraform.tfplan'
            }
        }
    }
}
