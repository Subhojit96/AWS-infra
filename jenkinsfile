pipeline{
    agent {
        label 'master'
    }
    tools {
        terraform 'terraform'
    }
    stages{
        stage ('initilize'){
            steps{
                sh "terraform init"
            }
        }
        stage ('plan'){
            steps{
                sh "terraform plan"
            }
        }
        stage ('deploy')
        {
            steps{
                sh "terraform apply -auto-approve"
            }
        }
    }
}
